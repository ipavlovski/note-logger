{
    "name": "typescript-starter",
    "version": "0.1.0",
    "description": "Starter project with basic configs",
    "dependencies": {
        "express": "^4.17.1",
        "luxon": "^1.27.0",
        "module-alias": "^2.2.2",
        "mysql2": "^2.2.5",
        "node-fetch": "^2.6.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.22",
        "@types/luxon": "^1.26.5",
        "@types/node-fetch": "^2.5.10",
        "@types/supertest": "^2.0.11",
        "dotenv": "^8.2.0",
        "jest": "^26.6.3",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4"
    },
    "scripts": {
        "dev:repl": "while true; do ts-node -D 2393 -D 2403 -D 2532 -D 7006 -D 7005 -r dotenv/config -r tsconfig-paths/register; sleep 0; done",
        "dev:jest": "jest --setupFiles dotenv/config --watch",
        "db:start": "systemctl --user start ssh-tunnel@gpl-test-mysql-tunnel",
        "db:repl": "( . ./.env; mysql -h $MYSQL_HOST -P $MYSQL_PORT -u $MYSQL_USER --password=$MYSQL_PASS $MYSQL_DB)",
        "db:stop": "systemctl --user stop ssh-tunnel@gpl-test-mysql-tunnel",
        "start:local": "tsc && node -r module-alias/register -r dotenv/config dist/index.js",
        "start:remote": "node -r module-alias/register dist/index.js",
        "docker:build": "export tag=local && docker-compose build ",
        "docker:run": "export tag=local && docker-compose up -d",
        "deploy:push": "export tag=$(git rev-parse --short HEAD) && docker-compose build && docker-compose push",
        "deploy:test": "ssh gpl-test 'cd w2e && docker-compose pull && docker-compose -d up w2e'",
        "deploy:prod": "ssh gpl-prod 'cd w2e && docker-compose pull && docker-compose -d up w2e'"
    },
    "_moduleAliases": {
        "src": "dist"
    }
}
