{
  "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "types": ["node"],
      "moduleResolution": "Node",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],

      "useDefineForClassFields": true,
      "allowJs": false,
      "skipLibCheck": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      // "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "baseUrl": "."

  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020",

      "esModuleInterop": true,
      "types": ["node"],
      "moduleResolution": "Node",
      "lib": ["ES2020"],
      "strict": true,
    },
    "ignoreDiagnostics": [2393, 2300],
    "require": ["dotenv/config", "tsconfig-paths/register"],
    "exclude": ["node_modules", "scratch.ts", "debug.ts"]

  },
  "include": ["frontend", "backend", "common", "vite.config.ts"],
  "exclude": ["debug.ts"]

}