{
  "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "types": ["node"],
      "moduleResolution": "Node",
      "lib": ["ES2020", "DOM"],
      "noImplicitAny": true,
      "baseUrl": ".",
      "paths": {
          "frontend/*": ["frontend/*"],
          "backend/*": ["backend/*"]
      }
      
  },
  "ts-node": {
    "ignoreDiagnostics": [2393, 2300],
    "require": ["dotenv/config", "tsconfig-paths/register"]
  },
  "exclude": ["node_modules"],
}